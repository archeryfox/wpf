<UserControl x:Class="Calendar.DayItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calendar"
             mc:Ignorable="d" 
             MouseLeftButtonDown="DayItem_OnMouseLeftButtonDown"
             d:DesignHeight="80" d:DesignWidth="300">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="ThatCheckBox" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Width="18"/>
        <Image x:Name="Ico" Margin="5" Grid.Column="1" Source="Pics/fast-food.png" HorizontalAlignment="Center"/>
        <Label x:Name="mTextBlock" HorizontalAlignment="Right" 
                VerticalAlignment="Center" Grid.Column="2"
                HorizontalContentAlignment="Center"
               Content="Побриться долго" FontSize="20" Foreground="AliceBlue" Width="220"/>
    </Grid>
</UserControl>
