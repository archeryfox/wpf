<UserControl x:Class="Calendar.DayTicket"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calendar"
             Cursor="Hand"
             mc:Ignorable="d" Height="75" Width="90">
    <Button Click="ButtonBase_OnClick" Background="Transparent" BorderBrush="Transparent" Height="NaN">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <Label x:Name="DayNumber" FontSize="18" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Content="0"></Label>
        <Border Padding="5" Grid.Row="1">
            <Image x:Name="TopTicket"  Source="/calendar-icon_34471.ico" />
        </Border>

    </Grid>
    </Button>
</UserControl>
